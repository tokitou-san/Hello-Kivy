#:import utils kivy.utils

<MainGridLayout>
	name: name
	age: age
	place: place

	GridLayout:
		cols: 1
		size: root.width, root.height
		row_force_default: True
		row_default_height: 100

		GridLayout:
			cols: 2
			row_default_height: 50
			row_force_default: True

			Label:
				text: "Your name:"
			TextInput:
				id: name
				multiline: False
			Label:
				text: "Your age:"
			TextInput:
				id: age
				multiline: False
			Label:
				text: "Your place:"
			TextInput:
				id: place
				multiline: False

		Button:
			text: "Submit"
			size_hint_y: None
			height: 50
			background_normal: ''
			background_color: utils.get_color_from_hex("#7e87fc")

			on_press: root.handle_press()

#:import utils kivy.utils

# default styles
<Button>
	size_hint_y: None
	height: 50
	background_normal: ''
	background_color: utils.get_color_from_hex("#7e87fc")

<MainGridLayout>
	name: name
	age: age
	place: place

	BoxLayout:
		orientation: 'vertical'
		size: (root.width, root.height)
		spacing: 20
		padding: 20

		BoxLayout:
			orientation: 'horizontal'
			
			BoxLayout:
				orientation: 'vertical'
				Label:
					text: "Your name:"
				Label:
					text: "Your age:"
				Label:
					text: "Your place:"
			
			BoxLayout:
				orientation: 'vertical'

				TextInput:
					id: name
					multiline: False
				TextInput:
					id: age
					multiline: False
				TextInput:
					id: place
					multiline: False

		BoxLayout:
			orientation: "horizontal"
			spacing: 20

			Button:
				text: "Submit"
				on_press: root.handle_press()

			Button:
				text: "Clear"

#:import utils kivy.utils

# default styles
<Button>
	size_hint_y: None
	height: 50
	background_normal: ''
	background_color: utils.get_color_from_hex("#7e87fc")

<MainGridLayout>
	# varialbes
	name: name
	age: age
	place: place

	# styles
	canvas.before:
		Color:
			rgba: (240/255, 240/255, 240/255, 1)
		Rectangle:
			size: self.size
			pos: self.pos

	BoxLayout:
		orientation: 'vertical'
		size: (root.width, root.height)
		spacing: 20
		padding: 20

		BoxLayout:
			orientation: 'horizontal'
			spacing: 10
			
			BoxLayout:
				orientation: 'vertical'
				canvas.before:
					Color:
						rgba: (0, 0, 0, 1)
					Rectangle:
						size: self.size
						pos: self.pos

				Label:
					text: "Your name:"
				Label:
					text: "Your age:"
				Label:
					text: "Your place:"
			
			BoxLayout:
				orientation: 'vertical'

				TextInput:
					id: name
					multiline: False
				TextInput:
					id: age
					multiline: False
				TextInput:
					id: place
					multiline: False

		BoxLayout:
			orientation: "horizontal"
			spacing: 20

			Button:
				text: "Submit"
				on_press: root.handle_press()

			Button:
				text: "Clear"
				on_press: root.handle_clear()
